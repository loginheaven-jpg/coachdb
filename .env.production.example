# Production Environment Variables
# 이 파일을 .env.production으로 복사하고 실제 값으로 수정하세요

# ===================
# Database
# ===================
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD_123!@#

# ===================
# Backend Security
# ===================
# 최소 32자 이상의 랜덤 문자열
# 생성 방법: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING_OR_LONGER

# JWT 알고리즘
ALGORITHM=HS256

# 토큰 만료 시간 (분)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ===================
# CORS Origins
# ===================
# 프론트엔드 도메인 (대괄호와 큰따옴표 유지)
CORS_ORIGINS=["https://coachdb-pilot.yourdomain.com"]

# ===================
# Frontend API URL
# ===================
VITE_API_BASE_URL=https://coachdb-pilot.yourdomain.com/api

# ===================
# Email (선택사항)
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===================
# Monitoring (선택사항)
# ===================
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/xxxxx

# ===================
# File Upload
# ===================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# ===================
# Application
# ===================
ENVIRONMENT=production
DEBUG=false
